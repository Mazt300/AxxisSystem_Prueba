@model IEnumerable<AxxisSystem.Model.Modelo.Departamento>

@{
    ViewBag.Title = "Lista de Departamentos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreDepartamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdDepartamento }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detalles", "Details", new { id = item.IdDepartamento }, new { @class = "btn btn-default" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdDepartamento }, new { @class = "btn btn-default", onclick = "MensajeAlerta();" })
            </td>
        </tr>
    }

</table>
